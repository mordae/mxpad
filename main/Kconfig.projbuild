menu "MXPAD"

	menu "Status LED (WS2812)"
		config LED_GPIO
			int "GPIO pin"
			default 18
			range 0 46

		config LED_STEP_MS
			int "Speed for loops"
			range 10 100
			default 30

		config LED_STEP_HUE
			int "Hue step for loops"
			range 1 3600
			default 3

		config LED_SATURATION
			int "Saturation"
			range 1 100
			default 100

		config LED_VALUE
			int "Value"
			range 1 100
			default 15

	endmenu

endmenu
